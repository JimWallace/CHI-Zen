keywords = {Agency,Agent,Avatar,Basic needs,Prosocial behavior,Social exclusion,Social presence,Virtual reality},
title = {{Real-life prosocial behavior decreases after being socially excluded by avatars, not agents}},
url = {http://dx.doi.org/10.1016/j.chb.2016.12.059},
year = {2017}
